# Goalaroo Backend Environment Configuration
# Copy this file to .env and customize the values

# Server Configuration
PORT=3000
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production

# Email Configuration
FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (for CORS)
FRONTEND_URL=https://goalaroo.yourdomain.com

# Database Tables (DynamoDB)
# These will be created automatically by Terraform
# USERS_TABLE=goalaroo-users
# MAGIC_CODES_TABLE=goalaroo-magic-codes
# USER_DATA_TABLE=goalaroo-user-data 